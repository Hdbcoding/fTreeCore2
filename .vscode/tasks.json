{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "yarn",
            "type": "shell",
            "command": "yarn install",
            "options": {
                "cwd": "${workspaceRoot}/fTreeCore2.Web"
            }
        },
        {
            "label": "buildDotNet",
            "command": "dotnet build",
            "type": "shell",
        },
        {
            "label": "build",
            "dependsOn": [
                "yarn",
                "gulpBundles",
                "buildDotNet"
            ],
            "group":{
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        }
    ]
}