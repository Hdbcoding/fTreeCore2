{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "yarn",
            "type": "shell",
            "command": "yarn install",
            "options": {
                "cwd": "${workspaceRoot}/fTreeCore2.Web"
            },
            "problemMatcher": []
        },
        {
            "label": "gulpCopyJS",
            "type": "shell",
            "command": "gulp copyJs",
            "options": {
                "cwd": "${workspaceRoot}/fTreeCore2.Web"
            },
            "dependsOn": [
                "yarn"
            ],
            "problemMatcher": []
        },
        {
            "label": "gulpCopyCSS",
            "type": "shell",
            "command": "gulp copyCss",
            "options": {
                "cwd": "${workspaceRoot}/fTreeCore2.Web"
            },
            "dependsOn": [
                "yarn"
            ]
        },
        {
            "label": "gulpBundles",
            "type": "shell",
            "command": "gulp bundle",
            "options": {
                "cwd": "${workspaceRoot}/fTreeCore2.Web"
            },
            "dependsOn": [
                "yarn"
            ]
        },
        {
            "label": "buildDotNet",
            "command": "dotnet build",
            "type": "shell"
        },
        {
            "label": "build",
            "dependsOn": [
                "yarn",
                "gulpCopyJS",
                "gulpCopyCSS",
                "gulpBundles",
                "buildDotNet"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        }
    ]
}